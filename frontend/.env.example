# ShopStation Frontend Environment Variables
# Copy this file to .env and fill in your specific values
# IMPORTANT: Only REACT_APP_ prefixed variables are available in the browser!

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API URL - changes based on environment
# Development: http://localhost:3001
# Staging: https://staging-backend.railway.app
# Production: https://backend-production-2cbb.up.railway.app
REACT_APP_API_URL=http://localhost:3001

# =============================================================================
# ENVIRONMENT CONTROL
# =============================================================================

# Override automatic environment detection
# Options: development, staging, production
# REACT_APP_ENV=development

# =============================================================================
# BUILD INFORMATION
# =============================================================================

# App version (usually set by CI/CD)
REACT_APP_VERSION=1.0.0

# Build timestamp (usually set by CI/CD)
REACT_APP_BUILD_TIME=2025-01-01T00:00:00Z

# Git commit hash (usually set by CI/CD)
REACT_APP_COMMIT_HASH=development

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================

# Google Analytics tracking IDs
REACT_APP_ANALYTICS_STAGING=GA-XXXXXXXX-X
REACT_APP_ANALYTICS_PROD=GA-YYYYYYYY-Y

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable specific features for testing
REACT_APP_FEATURE_BETA_UI=false
REACT_APP_FEATURE_ADVANCED_SEARCH=true

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Show debug information in development
REACT_APP_DEBUG_MODE=true

# Enable development tools
REACT_APP_DEV_TOOLS=true