# ShopStation Backend Environment Variables
# Copy this file to .env and fill in your specific values
# Never commit the actual .env file - it contains secrets!

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Server Configuration
PORT=3001
NODE_ENV=development  # Options: development, staging, production

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# Admin Panel Authentication
# CRITICAL: Change this in production! Use a strong, unique password.
ADMIN_PASSWORD=your-secure-admin-password-here

# JWT Secret for session management
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-jwt-secret-key-here

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features for gradual rollouts
FEATURE_ANALYTICS=true
FEATURE_RECEIPTS=true
FEATURE_BULK_OPS=true

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Rate limiting (requests per minute per IP)
API_RATE_LIMIT=100

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Database seeding and testing
DEV_SEED_DATABASE=false
DEV_ENABLE_CORS_ALL=false

# =============================================================================
# PRODUCTION ONLY
# =============================================================================

# External service API keys (add as needed)
# STRIPE_SECRET_KEY=sk_live_...
# SENDGRID_API_KEY=SG...
# GOOGLE_ANALYTICS_ID=GA...