{
  "name": "grocery-backend",
  "version": "1.0.0",
  "description": "ShopStation backend",
  "main": "server.js",
  "scripts": {
    "start": "node scripts/check-railway-env.js && node server.js",
    "start:unsafe": "node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "NODE_ENV=development node server.js",
    "check-env": "node scripts/check-railway-env.js",
    "migrate": "node scripts/migrate.js migrate",
    "migrate:rollback": "node scripts/migrate.js rollback",
    "migrate:create": "node scripts/migrate.js create",
    "migrate:status": "node scripts/migrate.js status",
    "migrate:validate": "node scripts/migrate.js validate",
    "quality-gates": "node scripts/quality-gates.js",
    "quality-gates:strict": "node scripts/quality-gates.js --strict",
    "deploy:safe": "node scripts/deployment-safety.js",
    "deploy:migration": "node scripts/deployment-safety.js migration",
    "deploy:hotfix": "node scripts/deployment-safety.js hotfix",
    "migrate:postgres": "node scripts/migrate-to-postgres.js",
    "prepare-migration": "node scripts/prepare-migration.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "node-fetch": "^2.7.0",
    "pg": "^8.16.3",
    "string-similarity": "^4.0.4",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "routes/**/*.js",
      "database/**/*.js",
      "utils/**/*.js",
      "config/**/*.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
